<%if (req.user) { %>

  <div class="container col-sm-4 mt-5">
    <h2 class="text-center">Create an Event</h2>
    <hr/>

    <div class="form">
      <form autocomplete="off" method="get" class="form-horizontal" role="form" action="/finishedcreateevent" id="createevent">
        <div class="form-group pt-3">
          <label style="width:80px;"><strong>Name</strong></label>
          <input type="text" name="eventname" placeholder="Tennis" id="input" />
        </div>
        <div class="form-group">
          <label style="width:80px;"><strong>Type</strong></label>
          <input type="text" name="eventtype" placeholder="Sport" id="input" />
        </div>
        <div class="form-group">
          <label style="width:80px;"><strong>Date</strong></label>
          <input type="text" name="eventdate" placeholder="Date" id="input" />
        </div>
        <div class="form-group">
          <label style="width:80px;"><strong>Start</strong></label>
          <input type="text" name="eventstart" placeholder="Start time" id="input" />
        </div>
        <div class="form-group">
          <label style="width:80px;"><strong>End</strong></label>
          <input type="text" name="eventend" placeholder="End time" id="input" />
        </div>

        <div class="form-group w-25 pt-4">
          <button type="submit" value="submit" class="btn btn-primary btn-block">Create</button>
        </div>
      </form>
    </div>
  </div>

  <% } %>
